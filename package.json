{
  "name": "js-path",
  "version": "0.1.0",
  "description": "Browser util to get the JS Path to any HTMLElement",
  "main": "src/js-path.js",
  "scripts": {
    "start": "web-dev-server --open --watch --node-resolve --app-index demo/index.html",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore"
  },
  "files": [
    "src/js-path.js",
    "src/apply-js-path-to-window.js"
  ],
  "keywords": [
    "util",
    "jspath",
    "devtool",
    "scraping"
  ],
  "author": "Joren Broekema <joren.broekema@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/scoped-elements": "^1.3.2",
    "@web/dev-server": "^0.1.4",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "lit-element": "^2.4.0",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
